<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_bootstrap_meta') %>
    <title>Create Student Form</title>
    <style>
        body {
            background-color: #e6e9e9;
            font-family: 'Poppins', sans-serif;
        }
        .form-container {
            height: 100%;
            display: grid;
            place-content: center;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 40px 50px;
        }
        h3 {
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
</head>

<body>
    <%- include('_header') %>
    <form class="w-50 mx-auto mt-4 form-container" action="/students/create-student" method="post">
        <h3>Add Student</h3>
        
        <fieldset class="mb-4">
            <label for="batch" class="form-label">Batch</label>
            <input type="text" class="form-control" id="batch" name="batch" required />
        </fieldset>

        <fieldset class="mb-4">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" required />
        </fieldset>

        <fieldset class="mb-4">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="abc@gmail.com" name="email" required />
        </fieldset>

        <fieldset class="mb-4">
            <label for="contactNumber" class="form-label">Mobile Number</label>
            <input type="text" class="form-control" id="contactNumber" name="contactNumber" required />
        </fieldset>

        <fieldset class="mb-4">
            <label for="college" class="form-label">College Name</label>
            <input type="text" class="form-control" id="college" name="college" required />
        </fieldset>

        <fieldset class="mb-4">
            <label for="placement" class="form-label">Placement Status</label>
            <select class="form-select" aria-label="Default select example" name="placement" id="placement" required>
                <option value="Placed">Placed</option>
                <option value="Not Placed">Not Placed</option>
            </select>
        </fieldset>

        <fieldset class="mb-4" style="display: flex; justify-content: space-between">
            <div class="mb-3">
                <label for="dsa" class="form-label">DSA</label>
                <input type="text" class="form-control" id="dsa" name="dsa" required />
            </div>
            <div class="mb-3">
                <label for="webd" class="form-label">Web Development</label>
                <input type="text" class="form-control" id="webd" name="webd" required />
            </div>
            <div class="mb-3">
                <label for="react" class="form-label">React</label>
                <input type="text" class="form-control" id="react" name="react" required />
            </div>
        </fieldset>

        <button type="submit" class="btn btn-success align-self-center">Create Student</button>
    </form>
    <%- include('_bootstrap_script') %>
</body>
</html>
