<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_bootstrap_meta') %>
    <title>Sign In</title>
    <style>
        body {
            background-color: #e6e9e9;
            font-family: 'Poppins', sans-serif; /* Ensures consistent font usage */
        }
        .signin-container {
            height: 60vh;
            display: grid;
            place-content: center;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-top: 5%;
        }
        h4 {
            text-align: center;
            color: #343a40; /* Darker color for better readability */
        }
    </style>
</head>
<body>
    <%- include('_header') %>
    <div class="w-50 mx-auto signin-container">
        <h4>Sign In</h4>
        <form action="/users/create-session" method="POST" style="width: 100%">
            <!-- Email input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="email">Enter Email</label>
                <input type="email" class="form-control" id="email" placeholder="abc@email.com" name="email" required />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="password">Enter Password</label>
                <input type="password" id="password" class="form-control" name="password" required />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-success btn-block mb-4">Sign in</button>

            <!-- Register link -->
            <div class="text-center">
                <p>No Account? <a href="/users/signup">Register</a></p>
            </div>
        </form>
    </div>
    <%- include('_bootstrap_script') %>
</body>
</html>
