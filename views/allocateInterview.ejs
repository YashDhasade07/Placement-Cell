<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_bootstrap_meta') %>
    <link rel="stylesheet" href="/css/interview.css">
    <title>Schedule Interview</title>
    <style>
        body {
            background-color: #E6E9E9;
            font-family: 'Poppins', sans-serif;
        }
        .form-container {
            display: grid;
            place-content: center;
            width: 100%;
            max-width: 530px;
            height: 60vh;
            margin: auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }
        h3 {
            margin-bottom: 30px;
            color: black;
            text-align: center;
        }
    </style>
</head>

<body>
    <%- include('_header') %>
    <div class="container">
        <form class="form-container" action="/company/schedule-interview" method="post">
            <h3>Schedule Interview</h3>

            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <select class="form-select" name="id" id="name" required>
                    <option selected disabled>Select Student</option>
                    <% for (let student of students) { %>
                        <option value="<%= student.id %>"><%= student.name %></option>
                    <% } %>
                </select>
            </div>

            <div class="mb-3">
                <label for="company" class="form-label">Company</label>
                <input type="text" class="form-control" id="company" name="company" required />
            </div>

            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date" name="date" required />
            </div>

            <button type="submit" class="btn btn-success align-self-center">Schedule Interview</button>
        </form>
    </div>

    <%- include('_bootstrap_script') %>
</body>
</html>
